#include "holberton.h"

/**
 * _strchr - pointer to the first occurrence of the character in a string@s: pointer.
 * @c: character.
 * Return: NULL or Pointer
 */

char *_strchr(char *s, char c)
{
	int i;

	for (i = 0; s[i] != '\0'; i++)
	{
		if (s[i] == c)
		{
			return (s + i);
		}
	}
	if (s[i] == c)
	{
		return (s + i);
	}
	return (0);
}
